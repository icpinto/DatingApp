# Database connection string used by the application.
# Example format for PostgreSQL when running locally.
DATABASE_URL=postgres://datinguser:yourpassword@localhost:5432/datingdb?sslmode=disable

# URL of the external matching service consumed by the backend.
MATCH_SERVICE_URL=http://localhost:8081

# URL of the messaging/outbox relay service.
MESSAGING_SERVICE_URL=http://localhost:8082

# Secrets used to validate verification tokens supplied by upstream services.
CONTACT_VERIFICATION_JWT_SECRET=change-me-contact-secret
IDENTITY_VERIFICATION_JWT_SECRET=change-me-identity-secret

# Optional shared fallback secrets for verification and authentication tokens.
VERIFICATION_JWT_SECRET=change-me-verification-secret
JWT_SECRET=change-me-general-secret
